{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "client-web-trigger-debugger",
            "type": "debugpy",
            "request": "launch",
            "module": "fastapi",
            "args": [
                "dev",
                "web.py",
                "--host",
                "0.0.0.0"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}/client/"
        },
        {
            "name": "frontend-scenario-debug",
            "type": "debugpy",
            "request": "launch",
            "module": "fastapi",
            "args": [
                "dev",
                "web.py"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}/client/"
        },
        {
            "name": "chrome-launch",
            "request": "launch",
            "type": "chrome",
            "url": "",
            "webRoot": "${workspaceFolder}/frontend/"
        },
        {
            "name": "seed-debug",
            "type": "debugpy",
            "request": "launch",
            "program": "seed.py",
            "cwd": "${workspaceFolder}/database-seed/",
            "console": "integratedTerminal",
            "args": ["<user register endpoint>", "<tweet endpoint>", "<amount of users>", "<tweet per user>"]
        },
        {
            "name": "controller-debug",
            "type": "debugpy",
            "request": "launch",
            "program": "controller.py",
            "cwd": "${workspaceFolder}/controller/",
            "console": "integratedTerminal",
            "args": ["http://localhost:8000", "schemas/cs_schema.json", "http://localhost:5000", "results"]
        }
    ]
}